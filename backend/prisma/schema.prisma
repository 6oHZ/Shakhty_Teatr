generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "linux-musl-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
}

model Play {
  id          Int      @id @default(autoincrement())
  title       String
  genre       String?
  director    String?
  description String?  @db.Text
  duration    String?
  ageLimit    String?
  createdAt   DateTime @default(now())
}

model Admins {
  id        Int      @id @default(autoincrement())
  login     String
  password  String
  createdAt DateTime @default(now())
}

model RefreshToken {
  id        String   @id @default(uuid())
  token     String   @unique
  userId    Int
  createdAt DateTime @default(now())
  expiresAt DateTime
}
