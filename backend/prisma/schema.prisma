datasource db {
  provider = "postgresql"
}

generator client {
  provider = "prisma-client-js"
}

model Play {
  id          Int      @id @default(autoincrement())
  title       String   // Название (например, "ИГРОКИ")
  genre       String?  // Описание жанра под названием
  director    String?  // Режиссер
  description String?  @db.Text // Большое описание спектакля
  duration    String?  // Длительность (например, "1 ч. 40 мин.")
  ageLimit    String?  // Возрастной ценз (например, "12+")
  createdAt   DateTime @default(now())
}

model Admins {
  id          Int     @id @default(autoincrement())
  login       String
  password    String
  createdAt   DateTime  @default(now())
}